$animation-placeholder-height = 1.5%
$placeholder-height = 10%
$below-15-offset = 1;
$above-15-offset = 16;
$box-shadow = 0 0.125rem 0.5rem $gray3

top-calc(row, offset)
    $placeholder-height + ((row - offset) * 6%)


editor-container(height, box-shadow = true)
    if(box-shadow)
        box-shadow: $box-shadow
    position: relative
    width: inherit
    height: height
    overflow: hidden

loading-container(top)
    z-index: 1050
    width: 100%
    height: 100%
    position: absolute
    top: top
    background: $white

@keyframes grow {
	0% {
		opacity: 0.9
	}
    50% {
        opacity: 0.3
    }
	100% {
		opacity: 1
	}
}

animation() {
    background $gray-3;
    animation: grow 4s ease-in;
    animation-iteration-count: infinite;
    position absolute

}

.search-box-container {
    grid-column: 2
}
