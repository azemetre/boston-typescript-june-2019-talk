/* 
Adobe Typekit import which is linked to a managed project within Product team.
This allows for access to any enabled fonts through TypeKit to be utilized within 
the project stylesheets.
*/
@import url("https://use.typekit.net/sud0dxc.css");
@import url('https://fonts.googleapis.com/css?family=Muli');
@import './desiccant.styl';

$primary = Archivo
$secondary = Proxima Nova, Muli, sans-serif
$config = Courier New
$placeholder = Open Sans

// 1rem / 16px = x / y
// x = rem value
// y = pixel value
$xh-rem = 4.375rem      // 70px
$h-rem = 3.75rem        // 60px
$xxxl-rem = 2.75rem     // 44px
$xxl-rem = 2.375rem     // 38px
$xl-rem = 2.00rem       // 32px
$l-rem = 1.50rem        // 24px
$xxm-rem = 1.25rem      // 20px
$xm-rem = 1.125rem      // 18px
$m-rem = 1rem           // 16px
$s-rem = 0.875rem       // 14px
$xs-rem = 0.75rem       // 12px
$xxs-rem = 0.500rem      // 8px
$xxxs-rem = 0.375rem     // 6px
$ss-rem = 0.25rem     // 4px

// 100% / 16px = x / y
// x = percent value
// y = pixel value
$xxxl-percent = 175%    // 28px
$xxl-percent = 150%     // 24px
$xl-percent = 125%      // 20px
$l-percent = 100%       // 16px
$m-percent = 75%        // 12px
$s-percent = 62.5%      // 10px
$xs-percent = 50%       // 8px
$xxs-percent = 37.5%    // 6px
$xxxs-percent = 25%     // 4px
